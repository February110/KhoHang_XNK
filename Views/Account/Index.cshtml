@{
    Layout = null;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@{
    var errorMessage = TempData["ErrorMessage"];
}
@if (errorMessage != null)
{
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Thông Báo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @errorMessage
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Hiển thị modal khi có thông báo
        var myModal = new bootstrap.Modal(document.getElementById('errorModal'));
        myModal.show();
    </script>
}

@model KhoHang_XNK.Models.AuthViewModel


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Đăng nhập & Đăng ký</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">

                <form method="post" asp-controller="Account" asp-action="Login" class="sign-in-form">
                    <h2 class="title">Đăng nhập</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="email" class="form-control" asp-for="Login.Email" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="form-control" asp-for="Login.Password" placeholder="Mật khẩu" required />
                    </div>
                    <div class="form-control">
                        <input type="checkbox" asp-for="Login.RememberMe" />
                        <label>Ghi nhớ đăng nhập</label>
                    </div>
                    <input type="submit" value="Đăng nhập" class="btn solid" />
                    <p class="social-text">Hoặc đăng nhập bằng</p>
                    <div class="social-media">
                        <a asp-controller="Account" asp-action="LoginWithFacebook" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a asp-controller="Account" asp-action="LoginWithGoogle" class="social-icon google-login">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                </form>

                <form method="post" asp-controller="Account" asp-action="Register" class="sign-up-form">
                    <h2 class="title">Đăng ký</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" class="form-control" asp-for="Register.FullName" placeholder="Họ và tên" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" class="form-control" asp-for="Register.Email" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="form-control" asp-for="Register.Password" placeholder="Mật khẩu" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="form-control" asp-for="Register.ConfirmPassword" placeholder="Xác nhận mật khẩu" required />
                    </div>
                    <input type="submit" class="btn" value="Đăng ký" />
                    <p class="social-text">Hoặc đăng ký bằng</p>
                    <div class="social-media">
                        <a asp-controller="Account" asp-action="LoginWithFacebook" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a asp-controller="Account" asp-action="LoginWithGoogle" class="social-icon google-login">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                </form>

            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Lần đầu đến đây?</h3>
                    <p>
                        Nhập thông tin của bạn và bắt đầu hành trình cùng chúng tôi
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Đăng ký
                    </button>
                </div>
                <img src="img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Đã có tài khoản?</h3>
                    <p>
                        Để kết nối với chúng tôi, vui lòng đăng nhập bằng thông tin cá nhân của bạn
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Đăng nhập
                    </button>
                </div>
                <img src="img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/js/app.js"></script>
</body>
</html>