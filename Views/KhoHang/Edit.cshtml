<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<div class="content-start transition">
	<div class="content-header">
		<h1>Chỉnh sửa Kho Hàng</h1>
		<p></p>
	</div>

	<hr />

	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h4>Thông tin Kho Hàng</h4>
				</div>
				<div class="card-body">
					<form asp-action="Edit">
						<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
						<input type="hidden" asp-for="MaKho" />

						<!-- Tên Kho -->
						<div class="form-group">
							<label asp-for="TenKho" class="control-label">Tên Kho</label>
							<input asp-for="TenKho" class="form-control" placeholder="Nhập tên kho" />
							<span asp-validation-for="TenKho" class="text-danger"></span>
						</div>

						<!-- Địa chỉ -->
						<div class="form-group">
							<label asp-for="DiaChi" class="control-label">Địa chỉ</label>
							<input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ kho" />
							<span asp-validation-for="DiaChi" class="text-danger"></span>
						</div>

						<!-- Sức chứa -->
						<div class="form-group">
							<label asp-for="SucChua" class="control-label">Sức chứa</label>
							<input asp-for="SucChua" class="form-control" placeholder="Nhập sức chứa kho" />
							<span asp-validation-for="SucChua" class="text-danger"></span>
						</div>

						<!-- Hình ảnh -->
						<div class="mb-3">
							<label asp-for="ImageUrl" class="form-label">Hình ảnh</label>
							<input asp-for="ImageUrl" class="form-control" type="file" />
							<span asp-validation-for="ImageUrl" class="text-danger"></span>
							<div class="mt-2">
								@if (Model.ImageUrl != null)
								{
									<img src="@Model.ImageUrl" alt="Hình ảnh kho" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
								}
							</div>
						</div>

						<div class="form-group text-center">
							<input type="submit" value="Lưu" class="btn btn-success" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<div class="text-center mt-3">
		@if (User.IsInRole("Admin"))
		{
			<a asp-action="Index" class="btn btn-secondary">Trở lại danh sách</a>
		}
		else
		{
			<a asp-controller="User" asp-action="Index" class="btn btn-secondary btn-sm">Trở lại danh sách</a>
		}
	</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
