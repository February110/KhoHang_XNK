		<div class="row">
			<div class="col-md-6">
				<form asp-action="Create" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<!-- Kho Hàng (Warehouse) -->
					<div class="form-group">
						<label asp-for="MaKho" class="control-label">Kho Hàng</label>
						<select asp-for="MaKho" class="form-control" asp-items="ViewBag.Khos">
							<option value="">-- Chọn Kho --</option>
						</select>
						<span asp-validation-for="MaKho" class="text-danger"></span>
					</div>

					<!-- Nhân Viên (Employee) -->
					<div class="form-group">
						<label asp-for="MaNV" class="control-label">Nhân Viên</label>
						<select asp-for="MaNV" class="form-control" id="MaNV">
							<option value="">-- Chọn Nhân Viên --</option>
						</select>
						<span asp-validation-for="MaNV" class="text-danger"></span>
					</div>

					<!-- Ngày Kiểm Kê (Inventory Check Date) -->
					<div class="form-group">
						<label asp-for="NgayKiemKe" class="control-label">Ngày Kiểm Kê</label>
						<input asp-for="NgayKiemKe" class="form-control" id="NgayKiemKe" type="date" />
						<span id="NgayKiemKeError" class="text-danger"></span>
						<span asp-validation-for="NgayKiemKe" class="text-danger"></span>
					</div>

					<!-- Submit Button -->
					<div class="form-group">
						<input type="submit" value="Tạo Phiếu Kiểm Kê" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>

		<div>
			<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		$(document).ready(function () {
			// Validate inventory check date
			$('#NgayKiemKe').on('change focusout', function () {
				var ngayKiemKe = new Date(this.value);
				var ngayHienTai = new Date();
				ngayHienTai.setHours(0, 0, 0, 0); // Normalize to midnight

				var errorElement = $('#NgayKiemKeError');
				if (!this.value) {
					errorElement.text("Vui lòng chọn ngày kiểm kê.");
				} else if (ngayKiemKe > ngayHienTai) {
					errorElement.text("Ngày kiểm kê không được lớn hơn ngày hiện tại.");
				} else {
					errorElement.text("");
				}
			});

			// Load employees based on selected warehouse
			$('#MaKho').change(function () {
				var maKho = parseInt($(this).val());
				var nhanVienDropdown = $('#MaNV');

				nhanVienDropdown.prop('disabled', true).empty().append('<option value="">-- Đang tải... --</option>');

				if (!isNaN(maKho)) {
					$.ajax({
						url: '/PhieuKiemKe/GetNhanViensByKho',
						type: 'GET',
						data: { maKho: maKho },
						dataType: 'json',
						success: function (data) {
							nhanVienDropdown.empty().append('<option value="">-- Chọn Nhân Viên --</option>');
							$.each(data, function (index, item) {
								nhanVienDropdown.append('<option value="' + item.maNV + '">' + item.hoTen + '</option>');
							});
							nhanVienDropdown.prop('disabled', false);
						},
						error: function () {
							nhanVienDropdown.empty().append('<option value="">-- Lỗi khi tải nhân viên --</option>');
							nhanVienDropdown.prop('disabled', false);
							alert("Không thể tải danh sách nhân viên. Vui lòng thử lại.");
						}
					});
				} else {
					nhanVienDropdown.empty().append('<option value="">-- Chọn Nhân Viên --</option>');
					nhanVienDropdown.prop('disabled', false);
				}
			});
		});
	</script>
}