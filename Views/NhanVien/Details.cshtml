            </div>
            <div class="stat-card">
                <div class="stat-number">@Model.PhieuKiemKes.Count()</div>
                <div class="stat-label">Phiếu Kiểm Kê</div>
            </div>
        </div>

        <!-- Đơn Nhập Hàng Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <h3 class="mb-0 text-success">Đơn Nhập Hàng</h3>
            </div>
            <div class="table-responsive">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>Mã Đơn</th>
                            <th><i class="fas fa-calendar-alt me-2"></i>Ngày Nhập</th>
                            <th><i class="fas fa-building me-2"></i>Nhà Cung Cấp</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var don in Model.DonNhapHangs)
                        {
                            <tr>
                                <td>@don.MaDonNhap</td>
                                <td>@don.NgayNhap.ToShortDateString()</td>
                                <td>@don.NhaCungCap.TenNCC</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Đơn Xuất Hàng Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <h3 class="mb-0 text-success">Đơn Xuất Hàng</h3>
            </div>
            <div class="table-responsive">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>Mã Đơn</th>
                            <th><i class="fas fa-calendar-alt me-2"></i>Ngày Xuất</th>
                            <th><i class="fas fa-user-friends me-2"></i>Khách Hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var don in Model.DonXuatHangs)
                        {
                            <tr>
                                <td>@don.MaDonXuat</td>
                                <td>@don.NgayXuat.ToShortDateString()</td>
                                <td>@don.KhachHang.TenKH</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Phiếu Kiểm Kê Section -->
        <div class="section-card">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <h3 class="mb-0 text-success">Phiếu Kiểm Kê</h3>
            </div>
            <div class="table-responsive">
                <table class="table modern-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>Mã Phiếu</th>
                            <th><i class="fas fa-calendar-alt me-2"></i>Ngày Kiểm Kê</th>
                            <th><i class="fas fa-warehouse me-2"></i>Kho Hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var phieu in Model.PhieuKiemKes)
                        {
                            <tr>
                                <td>@phieu.MaKiemKe</td>
                                <td>@phieu.NgayKiemKe.ToShortDateString()</td>
                                <td>@phieu.KhoHang.TenKho</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-4 text-center">
            @if (User.IsInRole("Admin"))
			{
                <a asp-action="Index" class="back-button">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại danh sách
                </a>
            }
            else {
                <a asp-action="IndexUser" class="back-button">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại danh sách
                </a>
            }
        </div>
    </div>
</div>

<script>
    // Add smooth animations
    document.addEventListener('DOMContentLoaded', function() {
        // Animate cards on load
        const cards = document.querySelectorAll('.section-card, .stat-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            setTimeout(() => {
                card.style.transition = 'all 0.6s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 100);
        });

        // Add table row hover effects
        const tableRows = document.querySelectorAll('.modern-table tbody tr');
        tableRows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.boxShadow = '0 5px 15px rgba(0,0,0,0.1)';
            });

            row.addEventListener('mouseleave', function() {
                this.style.boxShadow = 'none';
            });
        });
    });
</script>
