@model IEnumerable<KhoHang_XNK.Models.DonNhapHang>

@{
    ViewData["Title"] = "Danh sách đơn nhập hàng";
}

<h1>Danh sách đơn nhập hàng</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">+ Thêm đơn nhập hàng</a>
    <input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm...">
    <a asp-controller="CTDonNhap" asp-action="Index" class="btn btn-danger btn-sm">CT Đơn Nhập</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Mã đơn nhập</th> <!-- Thêm cột Mã đơn nhập -->

            <th>Tên nhà cung cấp</th>
            <th>Tên kho hàng</th>
            <th>Tên nhân viên</th>
            <th>Ngày nhập đơn</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDonNhap</td> <!-- Hiển thị Mã đơn nhập hàng -->

                <td>@Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)</td>
                <td>@Html.DisplayFor(modelItem => item.KhoHang.TenKho)</td>
                <td>@Html.DisplayFor(modelItem => item.NhanVien.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayNhap)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.MaDonNhap" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaDonNhap" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaDonNhap" class="btn btn-danger btn-sm">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById("searchBox").addEventListener("keyup", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("#customerTable tr");
            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(filter) ? "" : "none";
            });
        });
    </script>
}