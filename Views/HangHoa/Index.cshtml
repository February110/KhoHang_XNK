			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="content-header">
			<h1>Danh Sách Hàng Hóa</h1>
			<p></p>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-center mb-3">
							<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm hàng hóa mới</a>
							<div>
								<input type="text" id="searchInput" class="form-control d-inline-block w-auto me-2" placeholder="Tìm kiếm...">
								<button id="exportExcelBtn" class="btn btn-success" type="button" title="Xuất Excel">
									<i class="fas fa-file-excel"></i> Xuất Excel
								</button>
							</div>
						</div>
					</div>
					
					<div class="card-body">
						<div class="d-flex justify-content-between align-items-center mb-3">
							
							<div class="btn-group" role="group">
								<button type="button" class="btn btn-sm btn-outline-secondary" id="clearSearch" style="display: none;">
									<i class="fas fa-times"></i> Xóa tìm kiếm
								</button>
							</div>
						</div>

						<div class="table-responsive">
							<table class="table table-striped" id="hangHoaTable">
								<thead>
									<tr>
										<th>Mã hàng hóa</th>
										<th>Tên hàng hóa</th>
										<th>Mô tả</th>
										<th>Đơn vị tính</th>
										<th>Hạn sử dụng</th>
										<th>Hình ảnh</th>
										<th>Loại hàng hóa</th>
										<th scope="col" style="text-align: center;">Hành động</th>
									</tr>
								</thead>
								<tbody id="hangHoaTableBody">
									@if (Model != null && Model.Any())
									{
										@foreach (var item in Model)
										{
											<tr class="hanghoa-row"
												data-ma="@(item.MaHangHoa.ToString().ToLower())"
												data-ten="@(item.TenHangHoa?.ToLower() ?? "")"
												data-mota="@(item.MoTa?.ToLower() ?? "")"
												data-loai="@(item.LoaiHangHoa?.TenLoaiHang?.ToLower() ?? "")">
												<td>@Html.DisplayFor(modelItem => item.MaHangHoa)</td>
												<td>@Html.DisplayFor(modelItem => item.TenHangHoa)</td>
												<td>@Html.DisplayFor(modelItem => item.MoTa)</td>
												<td>@Html.DisplayFor(modelItem => item.DonViTinh)</td>
												<td>@item.HanSuDung.ToString("dd/MM/yyyy")</td>
												<td>
													@if (!string.IsNullOrEmpty(item.ImageUrl))
													{
														<img src="@item.ImageUrl" alt="Hình ảnh hàng hóa" class="img-thumbnail"
															 style="width: 80px; height: 80px; object-fit: cover;"
															 onerror="this.src='/images/no-image.png';" />
													}
													else
													{
														<img src="/images/no-image.png" alt="Không có hình ảnh" class="img-thumbnail"
															 style="width: 80px; height: 80px; object-fit: cover;" />
													}
												</td>
												<td>@Html.DisplayFor(modelItem => item.LoaiHangHoa.TenLoaiHang)</td>
												<td style="text-align: center;">
													<a asp-action="Edit" asp-route-id="@item.MaHangHoa" class="btn btn-light rounded-pill"><i class="fas fa-edit"></i></a>
													<a asp-action="Details" asp-route-id="@item.MaHangHoa" class="btn btn-light rounded-pill"><i class="fas fa-eye"></i></a>
													<a asp-action="Delete" asp-route-id="@item.MaHangHoa" class="btn btn-light rounded-pill" onclick="return confirm('Bạn có chắc chắn muốn xóa hàng hóa này không?');"><i class="fas fa-trash"></i></a>
												</td>
											</tr>
										}
									}
									else
									{
										<tr>
											<td colspan="8" class="text-center">Không có dữ liệu</td>
										</tr>
									}
								</tbody>
							</table>

							<!-- No results message -->
							<div id="noResults" class="text-center py-5 d-none">
								<i class="fas fa-search fa-3x text-muted mb-3"></i>
								<h5 class="text-muted">Không tìm thấy hàng hóa nào</h5>
								<p class="text-muted">Hãy thử với từ khóa khác</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/common-excel2.js"></script>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			initializeList({
				searchInputId: 'searchInput',
				exportBtnId: 'exportExcelBtn',
				clearSearchBtnId: 'clearSearch',
				noResultsId: 'noResults',
				tableBodyId: 'hangHoaTableBody',
				rowSelector: '.hanghoa-row',
				searchFields: ['ma', 'ten', 'mota', 'loai'],
				exportUrl: '@Url.Action("ExportExcel", "HangHoa")'
			});
		});
	</script>
}