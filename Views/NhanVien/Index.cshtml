				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="content-header">
			<h1>Danh Sách Nhân Viên</h1>
			<p></p>
		</div>

		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-center mb-3">
							<a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm nhân viên mới</a>
							<input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm...">
						</div>
					</div>

					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th scope="col">Mã nhân viên</th>
										<th scope="col">Họ và tên</th>
										<th scope="col">Ngày Sinh</th>
										<th scope="col">Chức vụ</th>
										<th scope="col">Số điện thoại</th>
										<th scope="col">Email</th>
										<th scope="col">Kho hàng làm việc</th>
										<th scope="col">Ảnh</th>
										<th scope="col" style="text-align: center;">Hành động</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<th scope="row">@Html.DisplayFor(modelItem => item.MaNV)</th>
											<td>@Html.DisplayFor(modelItem => item.HoTen)</td>
											<td>@(item.NgaySinh?.ToString("dd/MM/yyyy") ?? "Không có dữ liệu")</td>
											<td>@Html.DisplayFor(modelItem => item.ChucVu)</td>
											<td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
											<td>@Html.DisplayFor(modelItem => item.Email)</td>
											<td>@(item.KhoHang != null ? item.KhoHang.TenKho : "Không có dữ liệu")</td>
											<td>
												@if (!string.IsNullOrEmpty(item.ImageUrl))
												{
													<img src="@item.ImageUrl" alt="Ảnh nhân viên" width="50" height="50" class="rounded-circle" />
												}
												else
												{
													<span>Không có ảnh</span>
												}
											</td>
											
											<td style="text-align: center;">
												<a asp-action ="Edit" asp-route-id="@item.MaNV" class="btn btn-warning rounded-pill">
													<i class="fas fa-edit"></i> Sửa</a>
												<a asp-action="Details" asp-route-id="@item.MaNV" class="btn btn-info rounded-pill"><i class="fas fa-eye"></i> Chi tiết</a>
												<a asp-action="Delete" asp-route-id="@item.MaNV" class="btn btn-danger rounded-pill" onclick="return confirm('Bạn có chắc chắn muốn xóa KhoHang này không?');"><i class="fas fa-trash"></i> Xóa</a>

											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById("searchInput").addEventListener("input", function() {
            var input = this.value.toLowerCase();
            var rows = document.querySelectorAll("table tbody tr");
            rows.forEach(function(row) {
                var cells = row.querySelectorAll("td");
                var match = false;
                cells.forEach(function(cell) {
                    if (cell.textContent.toLowerCase().includes(input)) {
                        match = true;
                    }
                });
                row.style.display = match ? "" : "none";
            });
        });
    </script>
}
