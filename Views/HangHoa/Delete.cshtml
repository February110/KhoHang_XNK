				else if (User.IsInRole("User"))
				{
					<a asp-controller="TongQuan" asp-action="IndexUser" style="text-decoration: none; color: inherit;">
						<h2 class="mb-0"><img src="~/images/logo/logo_sidebar.png"> WareTrack</h2>
					</a>
				}
			</div>

