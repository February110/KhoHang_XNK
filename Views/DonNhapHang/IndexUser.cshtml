<!-- End Sidebar-->
<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">

	<div class="container-fluid dashboard">
		<div class="content-header">
			<h1>Danh Sách Đơn Nhập Hàng</h1>
			<p></p>
		</div>

		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-center mb-3">
							<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm đơn nhập hàng mới</a>
							<input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm...">
							<a asp-controller="CTDonNhap" asp-action="Index" class="btn btn-secondary rounded-pill">CT Đơn Nhập</a>
						</div>
					</div>

					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th scope="col">Mã đơn nhập</th>
										<th scope="col">Tên nhà cung cấp</th>
										<th scope="col">Tên kho hàng</th>
										<th scope="col">Tên nhân viên</th>
										<th scope="col">Ngày nhập đơn</th>

										<th scope="col" style="text-align: center;">Hành động</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<th scope="row">@Html.DisplayFor(modelItem => item.MaDonNhap)</th>

											<td>@Html.DisplayFor(modelItem => item.NhaCungCap.TenNCC)</td>
											<td>@Html.DisplayFor(modelItem => item.KhoHang.TenKho)</td>
											<td>@Html.DisplayFor(modelItem => item.NhanVien.HoTen)</td>
											<td>@Html.DisplayFor(modelItem => item.NgayNhap)</td>

											<td style="text-align: center;">
												<a asp-action="Edit" asp-route-id="@item.MaDonNhap" class="btn btn-warning rounded-pill"><i class="fas fa-edit"></i> Sửa</a>
												<a asp-action="Details" asp-route-id="@item.MaDonNhap" class="btn btn-info rounded-pill"><i class="fas fa-eye"></i> Chi tiết</a>
												<a asp-action="Delete" asp-route-id="@item.MaDonNhap" class="btn btn-danger rounded-pill" onclick="return confirm('Bạn có chắc chắn muốn xóa KhoHang này không?');"><i class="fas fa-trash"></i> Xóa</a>

											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

@section Scripts {
	<script>
		document.getElementById("searchBox").addEventListener("keyup", function () {
			let filter = this.value.toLowerCase();
			let rows = document.querySelectorAll("#customerTable tr");
			rows.forEach(row => {
				let text = row.innerText.toLowerCase();
				row.style.display = text.includes(filter) ? "" : "none";
			});
		});
	</script>
}

