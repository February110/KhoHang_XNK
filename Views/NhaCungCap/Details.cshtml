@model KhoHang_XNK.Models.NhaCungCap

@{
    ViewData["Title"] = "Details";
}
<!--Sidebar-->
<div class="sidebar transition overlay-scrollbars animate__animated  animate__slideInLeft">
	<div class="sidebar-content">
		<div id="sidebar">

			<!-- Logo -->
			<div class="logo">
				<h2 class="mb-0"><img src="~/images/logo/logo_sidebar.png"> WareTrack</h2>
			</div>

			<ul class="side-menu">
				<li>
					<a asp-controller="KhoHang" asp-action="Index">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiKhachHang" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index" class="active">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->

<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="container-fluid p-4" style="color:black">
			<h1 class="text-center mb-4">Chi Tiết Nhà Cung Cấp</h1>

			<div class="row justify-content-center">
				<div class="col-md-8">
					<h4 class="mb-3">Thông tin Nhà Cung Cấp</h4>
					<hr />
					<dl class="row">
						<dt class="col-sm-4">Tên Nhà Cung Cấp:</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.TenNCC)</dd>

						<dt class="col-sm-4">Địa Chỉ:</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChi)</dd>

						<dt class="col-sm-4">Số Điện Thoại:</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.SoDienThoai)</dd>

						<dt class="col-sm-4">Email:</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
					</dl>

					<div class="d-flex justify-content-between mt-3">
						<a asp-action="Edit" asp-route-id="@Model?.MaNCC" class="btn btn-warning btn-sm">
							<i class="fas fa-edit"></i> Chỉnh Sửa
						</a>
						<a asp-action="Index" class="btn btn-secondary btn-sm">Quay lại danh sách</a>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
