@section Scripts {
	<script>
		$(document).ready(function() {
			// Khi chọn Mã Kiểm Kê
			$('#maKiemKeSelect').change(function() {
				var maKiemKe = $(this).val();
				$('#maHangHoaSelect').html('<option value="">-- Chọn Hàng Hóa --</option>');
				$('#soLuongTonKho').val('');
				$('#SoLuongThucTe').val('');
				$('#SoLuongChenhLech').val('');

				if (maKiemKe) {
					// Lấy Mã Kho từ Mã Kiểm Kê
					$.getJSON('/PhieuKiemKe/GetMaKhoByKiemKe', { maKiemKe: parseInt(maKiemKe) }, function(data) {
						if (data.maKho) {
							// Lấy danh sách Hàng Hóa trong kho đó
							$.getJSON('/PhieuKiemKe/GetHangHoaByKho', { maKho: data.maKho }, function(hangHoas) {
								var options = '<option value="">-- Chọn Hàng Hóa --</option>';
								$.each(hangHoas, function(i, item) {
									options += '<option value="' + item.value + '">' + item.text + '</option>';
								});
								$('#maHangHoaSelect').html(options);
							});
						}
					});
				}
			});

			// Khi chọn Hàng Hóa
			$('#maHangHoaSelect').change(function() {
				var maHangHoa = $(this).val();
				var maKiemKe = $('#maKiemKeSelect').val();
				$('#SoLuongThucTe').val('');
				$('#SoLuongChenhLech').val('');

				if (maHangHoa && maKiemKe) {
					// Lấy Mã Kho từ Mã Kiểm Kê
					$.getJSON('/PhieuKiemKe/GetMaKhoByKiemKe', { maKiemKe: parseInt(maKiemKe) }, function(data) {
						if (data.maKho) {
							// Lấy số lượng tồn kho
							$.getJSON('/PhieuKiemKe/GetSoLuongTonKho', {
								maKho: data.maKho,
								maHangHoa: parseInt(maHangHoa)
							}, function(result) {
								$('#soLuongTonKho').val(result.soLuong || 0);
							});
						}
					});
				} else {
					$('#soLuongTonKho').val('');
				}
			});

			// Tính toán chênh lệch khi số lượng thực tế thay đổi
			$('#SoLuongThucTe').on('input', function() {
				calculateChenhLech();
			});

			// Hàm tính toán chênh lệch
			function calculateChenhLech() {
				var soLuongTonKho = parseFloat($('#soLuongTonKho').val()) || 0;
				var soLuongThucTe = parseFloat($('#SoLuongThucTe').val()) || 0;
				var chenhLech = soLuongThucTe - soLuongTonKho;

				// Làm tròn 2 chữ số thập phân nếu cần
				chenhLech = Math.round(chenhLech * 100) / 100;

				$('#SoLuongChenhLech').val(chenhLech);
			}
		});
	</script>
}
