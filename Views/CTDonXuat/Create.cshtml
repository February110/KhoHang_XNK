<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="card shadow-lg p-4">
			<div class="card-body">
				<form asp-action="Create" method="post">
					<div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

					<!-- Đơn Xuất -->
					<div class="mb-3">
						<label class="form-label fw-bold">Đơn Xuất</label>
						<select asp-for="MaDonXuat" id="donXuatSelect" class="form-select" asp-items="ViewBag.DonXuatHangs">
							<option value="">-- Chọn Đơn Xuất --</option>
						</select>
						<span asp-validation-for="MaDonXuat" class="text-danger"></span>
					</div>

					<!-- Hàng Hóa -->
					<div class="mb-3">
						<label class="form-label fw-bold">Hàng Hóa</label>
						<select asp-for="MaHangHoa" id="hangHoaSelect" class="form-select">
							<option value="">-- Chọn Hàng Hóa --</option>
						</select>
						<span asp-validation-for="MaHangHoa" class="text-danger"></span>
					</div>

					<!-- Số Lượng -->
					<div class="mb-3">
						<label class="form-label fw-bold">Số Lượng</label>
						<input asp-for="SoLuong" type="number" class="form-control" placeholder="Nhập số lượng" min="1" />
						<span asp-validation-for="SoLuong" class="text-danger"></span>
					</div>

					<!-- Đơn Giá -->
					<div class="mb-3">
						<label class="form-label fw-bold">Đơn Giá</label>
						<input asp-for="DonGia" type="number" class="form-control" step="0.01" placeholder="Nhập đơn giá" min="0" />
						<span asp-validation-for="DonGia" class="text-danger"></span>
					</div>

					<!-- Nút thao tác -->
					<div class="d-flex justify-content-between">
						<a asp-action="Index" class="btn btn-secondary">
							<i class="fas fa-arrow-left"></i> Quay lại
						</a>
						<button type="submit" class="btn btn-primary">
							<i class="fas fa-save"></i> Lưu
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		$(document).ready(function() {
			$('#donXuatSelect').change(function() {
				var maDonXuat = $(this).val();
				if (maDonXuat) {
					$.getJSON('/CTDonXuat/GetMaKhoByDonXuat', { maDonXuat: parseInt(maDonXuat) }, function(data) {
						if (data.maKho) {
							$.getJSON('/CTDonXuat/GetHangHoaByKho', { maKho: data.maKho }, function(products) {
								var options = '<option value="">-- Chọn Hàng Hóa --</option>';
								$.each(products, function(i, product) {
									options += '<option value="' + product.value + '">' + product.text + '</option>';
								});
								$('#hangHoaSelect').html(options);
							});
						}
					});
				} else {
					$('#hangHoaSelect').html('<option value="">-- Chọn Hàng Hóa --</option>');
				}
			});
		});
	</script>
}