<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container p-4">
		<div class="content-header">
			<h1>Chỉnh sửa hàng hóa</h1>
			<p></p>
		</div>
		<div class="card shadow-sm p-4">
			<form asp-action="Edit" enctype="multipart/form-data">
				<input type="hidden" asp-for="MaHangHoa" />

				<div class="mb-3">
					<label asp-for="TenHangHoa" class="form-label">Tên hàng hóa</label>
					<input asp-for="TenHangHoa" class="form-control" />
					<span asp-validation-for="TenHangHoa" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="MoTa" class="form-label">Mô tả</label>
					<textarea asp-for="MoTa" class="form-control"></textarea>
					<span asp-validation-for="MoTa" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="DonViTinh" class="form-label">Đơn vị tính</label>
					<input asp-for="DonViTinh" class="form-control" />
					<span asp-validation-for="DonViTinh" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="HanSuDung" class="form-label">Hạn sử dụng</label>
					<input asp-for="HanSuDung" class="form-control" type="date" />
					<span asp-validation-for="HanSuDung" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="ImageUrl" class="form-label">Hình ảnh</label>
					<input asp-for="ImageUrl" class="form-control" type="file" />
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
					<div class="mt-2">
						<img src="@Model.ImageUrl" alt="Hình ảnh hàng hóa" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="MaLoaiHang" class="form-label">Loại hàng hóa</label>
					<select asp-for="MaLoaiHang" class="form-control" asp-items="ViewBag.MaLoaiHang"></select>
					<span asp-validation-for="MaLoaiHang" class="text-danger"></span>
				</div>

				<div class="text-center mt-3">
					<button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
					<a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
				</div>
			</form>
		</div>
	</div>
</div>

