					<a asp-controller="KhoHang" asp-action="Index">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiKhachHang" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index" class="active">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->

<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="row">
			<div class="col-md-6">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<!-- Ngày Xuất -->
					<div class="form-group">
						<label asp-for="NgayXuat" class="control-label">Ngày Xuất</label>
						<input asp-for="NgayXuat" class="form-control" type="date" id="NgayXuat" />
						<span id="NgayXuatError" class="text-danger"></span>
						<span asp-validation-for="NgayXuat" class="text-danger"></span>
					</div>

					<!-- Khách Hàng -->
					<div class="form-group">
						<label asp-for="MaKhachHang" class="control-label">Khách Hàng</label>
						<select asp-for="MaKhachHang" class="form-control" asp-items="ViewBag.KhachHangs">
							<option value="">-- Chọn Khách Hàng --</option>
						</select>
						<span asp-validation-for="MaKhachHang" class="text-danger"></span>
					</div>

					<!-- Kho Hàng -->
					<div class="form-group">
						<label asp-for="MaKho" class="control-label">Kho Hàng</label>
						<select asp-for="MaKho" class="form-control" asp-items="ViewBag.Khos" id="MaKho">
							<option value="">-- Chọn Kho --</option>
						</select>
						<span asp-validation-for="MaKho" class="text-danger"></span>
					</div>

					<!-- Nhân Viên -->
					<div class="form-group">
						<label asp-for="MaNV" class="control-label">Nhân Viên</label>
						<select asp-for="MaNV" class="form-control" id="MaNV">
							<option value="">-- Chọn Nhân Viên --</option>
						</select>
						<span asp-validation-for="MaNV" class="text-danger"></span>
					</div>

					<!-- Submit -->
					<button type="submit" class="btn btn-success mt-3">Lưu</button>
					<a asp-action="Index" class="btn btn-secondary mt-3">Quay Lại</a>
				</form>
			</div>
		</div>

	</div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Kiểm tra ngày xuất không lớn hơn ngày hiện tại
        $('#NgayXuat').change(function () {
            var ngayXuat = new Date(this.value);
            var ngayHienTai = new Date();
            ngayHienTai.setHours(0, 0, 0, 0);

            if (this.value === "") {
                $('#NgayXuatError').text("Vui lòng chọn ngày xuất.");
            } else if (ngayNhap < ngayHienTai) {
                $('#NgayNhapError').text("Ngày nhập không được ngày nhỏ hơn ngày hiện tại.");
            } else {
                $('#NgayXuatError').text("");
            }
        });

        // Cập nhật danh sách nhân viên khi chọn kho
        $('#MaKho').change(function () {
            var maKho = parseInt($(this).val());

            if (!isNaN(maKho)) {
                $.getJSON('/DonXuatHang/GetNhanViensByKho', { maKho: maKho }, function (data) {
                    var nhanVienDropdown = $('#MaNV');
                    nhanVienDropdown.empty().append('<option value="">-- Chọn Nhân Viên --</option>');
                    $.each(data, function (index, item) {
                        nhanVienDropdown.append('<option value="' + item.maNV + '">' + item.hoTen + '</option>');
                    });
                });
            } else {
                $('#MaNV').empty().append('<option value="">-- Chọn Nhân Viên --</option>');
            }
        });
    });
</script>
