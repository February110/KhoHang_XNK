						<a asp-controller="DonNhapHang" asp-action="IndexUser">
							<i class='bx bxs-notepad icon'></i> Đơn Nhập Hàng
						</a>
					}
				</li>

				<!-- Đơn Xuất Hàng -->
				<li>
					@if (User.IsInRole("Admin"))
					{
						<a asp-controller="DonXuatHang" asp-action="Index">
							<i class='bx bxs-notepad icon'></i> Đơn Xuất Hàng
						</a>
					}
					else if (User.IsInRole("User"))
					{
						<a asp-controller="DonXuatHang" asp-action="IndexUser">
							<i class='bx bxs-notepad icon'></i> Đơn Xuất Hàng
						</a>
					}
				</li>

				<!-- Phiếu Kiểm Kê -->
				<li>
					@if (User.IsInRole("Admin"))
					{
						<a asp-controller="PhieuKiemKe" asp-action="Index">
							<i class='bx bxs-notepad icon'></i> Phiếu Kiểm Kê
						</a>
					}
					else if (User.IsInRole("User"))
					{
						<a asp-controller="PhieuKiemKe" asp-action="IndexUser">
							<i class='bx bxs-notepad icon'></i> Phiếu Kiểm Kê
						</a>
					}
				</li>

				<!-- Thống Kê -->
				<li>
					@if (User.IsInRole("Admin"))
					{
						<a asp-controller="ThongKe" asp-action="Index">
							<i class="bx bxs-bar-chart-alt-2 icon"></i> Thống Kê Doanh Thu
						</a>
					}
					else if (User.IsInRole("User"))
					{
						<a asp-controller="ThongKe" asp-action="IndexUser">
							<i class="bx bxs-bar-chart-alt-2 icon"></i> Thống Kê Doanh Thu
						</a>
					}
				</li>

			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<div class="content-start transition">
	<div class="container-fluid dashboard py-5" style="color: #212529;">
		<div class="card shadow-lg border-0 rounded-3">
			<div class="card-body p-5">
				<div class="d-flex justify-content-between align-items-center mb-4">
					<h4 class="card-title mb-0 fw-bold text-primary">Thông tin Nhân Viên</h4>
					
				</div>
				<hr class="my-4 border-secondary" />
				<div class="row g-4">
					<div class="col-md-6">
						<dl class="row mb-0">
							<dt class="col-sm-4 fw-semibold text-muted">Họ tên:</dt>
							<dd class="col-sm-8">@Html.DisplayFor(model => model.HoTen)</dd>

							<dt class="col-sm-4 fw-semibold text-muted">Ngày sinh:</dt>
							<dd class="col-sm-8">@Model.NgaySinh?.ToString("dd/MM/yyyy")</dd>


							<dt class="col-sm-4 fw-semibold text-muted">Chức vụ:</dt>
							<dd class="col-sm-8">@Html.DisplayFor(model => model.ChucVu)</dd>
						</dl>
					</div>
					<div class="col-md-6">
						<dl class="row mb-0">
							<dt class="col-sm-4 fw-semibold text-muted">Số điện thoại:</dt>
							<dd class="col-sm-8">@Html.DisplayFor(model => model.SoDienThoai)</dd>

							<dt class="col-sm-4 fw-semibold text-muted">Email:</dt>
							<dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

							<dt class="col-sm-4 fw-semibold text-muted">Kho hàng đang làm việc:</dt>
							<dd class="col-sm-8">@Html.DisplayFor(model => model.KhoHang.TenKho)</dd>
						</dl>
					</div>
					<div class="col-12">
						<dl class="row mb-0 align-items-center">
							<dt class="col-sm-2 fw-semibold text-muted">Ảnh nhân viên:</dt>
							<dd class="col-sm-10">
								@if (!string.IsNullOrEmpty(Model.ImageUrl))
								{
									<img src="@Model.ImageUrl" alt="Ảnh Nhân Viên" class="img-thumbnail border-0 shadow-sm rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
								}
								else
								{
									<span class="text-muted fst-italic">Không có ảnh</span>
								}
							</dd>
						</dl>
					</div>
				</div>

				<!-- Confirmation Form -->
				<form asp-action="Delete" method="post" class="mt-5">
					<input type="hidden" asp-for="MaNV" />
					<div class="text-center mb-4">
						<button type="submit" class="btn btn-danger btn-lg px-4 py-2 rounded-pill shadow-sm hover-scale">
							<i class="bi bi-trash me-2"></i>Xóa Nhân Viên
						</button>
					</div>

					<div class="text-center">
						@if (User.IsInRole("Admin"))
						{

							<a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill hover-scale">
								<i class="fas fa-arrow-left me-2"></i>Quay lại
							</a>
						}
						else
						{

							<a asp-action="IndexUser" class="btn btn-outline-secondary px-4 py-2 rounded-pill hover-scale">
								<i class="fas fa-arrow-left me-2"></i>Quay lại
							</a>
						}
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

		.card:hover {
			transform: translateY(-5px);
			box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
		}

	.btn:hover {
		transition: all 0.2s ease;
	}

	.hover-scale:hover {
		transform: scale(1.05);
	}

	.text-primary {
		color: #0d6efd !important;
	}

	.border-secondary {
		border-color: #dee2e6 !important;
	}

	.rounded-pill {
		border-radius: 50rem !important;
	}

	.img-thumbnail {
		transition: transform 0.3s ease;
	}

		.img-thumbnail:hover {
			transform: scale(1.1);
		}
</style>