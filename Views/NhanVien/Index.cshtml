<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="content-header">
			<h1>Danh Sách Nhân Viên</h1>
			<p></p>
		</div>

		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-center mb-3">
							<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm hàng hóa mới</a>
							<div>
								<input type="text" id="searchInput" class="form-control d-inline-block w-auto me-2" placeholder="Tìm kiếm...">
								<button id="exportExcelBtn" class="btn btn-success" type="button" title="Xuất Excel">
									<i class="fas fa-file-excel"></i> Xuất Excel
								</button>
							</div>
						</div>
					</div>

					<div class="card-body">
						<div class="d-flex justify-content-between align-items-center mb-3">

							<div class="btn-group" role="group">
								<button type="button" class="btn btn-sm btn-outline-secondary" id="clearSearch" style="display: none;">
									<i class="fas fa-times"></i> Xóa tìm kiếm
								</button>
							</div>
						</div>
						<div class="table-responsive">

							<table class="table table-striped" id="nhanVienTable">
								<thead>
									<tr>
										<th scope="col">Mã nhân viên</th>
										<th scope="col">Họ và tên</th>
										<th scope="col">Ngày Sinh</th>
										<th scope="col">Chức vụ</th>
										<th scope="col">Số điện thoại</th>
										<th scope="col">Email</th>
										<th scope="col">Kho hàng làm việc</th>
										<th scope="col">Ảnh</th>
										<th scope="col" style="text-align: center;">Hành động</th>

									</tr>
								</thead>
								<tbody id="nhanVienTableBody">
									@foreach (var item in Model)
									{
										<tr class="nhanvien-row"
											data-ma="@(item.MaNV.ToString().ToLower())"
											data-ten="@(item.HoTen?.ToLower() ?? "")"
											data-chucvu="@(item.ChucVu?.ToLower() ?? "")"
											data-sodienthoai="@(item.SoDienThoai?.ToLower() ?? "")"
											data-email="@(item.Email?.ToLower() ?? "")"
											data-khuvuc="@(item.KhoHang?.TenKho?.ToLower() ?? "")">
											>
											
											<td scope="row">@Html.DisplayFor(modelItem => item.MaNV)</td>
											<td>@Html.DisplayFor(modelItem => item.HoTen)</td>
											<td>@(item.NgaySinh?.ToString("dd/MM/yyyy") ?? "Không có dữ liệu")</td>
											<td>@Html.DisplayFor(modelItem => item.ChucVu)</td>
											<td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
											<td>@Html.DisplayFor(modelItem => item.Email)</td>
											<td>@(item.KhoHang != null ? item.KhoHang.TenKho : "Không có dữ liệu")</td>
											<td>
												@if (!string.IsNullOrEmpty(item.ImageUrl))
												{
													<img src="@item.ImageUrl" alt="Ảnh nhân viên" width="50" height="50" class="rounded-circle" />
												}
												else
												{
													<span>Không có ảnh</span>
												}
											</td>
											
											<td style="text-align: center;">
												<a asp-action ="Edit" asp-route-id="@item.MaNV" class="btn btn-light rounded-pill" >
													<i class="fas fa-edit"></i></a>
												<a asp-action="Details" asp-route-id="@item.MaNV" class="btn btn-light rounded-pill"><i class="fas fa-eye"></i></a>
												<a asp-action="Delete" asp-route-id="@item.MaNV" class="btn btn-light rounded-pill" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này không?');"><i class="fas fa-trash"></i></a>

											</td>
										</tr>
									}
								</tbody>
							</table>

							<!-- No results message -->
							<div id="noResults" class="text-center py-5 d-none">
								<i class="fas fa-search fa-3x text-muted mb-3"></i>
								<h5 class="text-muted">Không tìm thấy nhân viên nào</h5>
								<p class="text-muted">Hãy thử với từ khóa khác</p>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
@section Scripts {
	<script src="~/js/common-excel2.js"></script>
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			initializeList({
				searchInputId: 'searchInput',
				exportBtnId: 'exportExcelBtn',
				clearSearchBtnId: 'clearSearch',
				noResultsId: 'noResults',
				tableBodyId: 'nhanVienTableBody',
				rowSelector: '.nhanvien-row',
				searchFields: ['ma', 'ten', 'chucvu', 'sodienthoai', 'email', 'khuvuc'],
				exportUrl: '@Url.Action("ExportExcel", "NhanVien")'
			});
		});
	</script>
}