@model KhoHang_XNK.Models.NhaCungCap

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid p-4">
    <h1 class="mb-4 text-center">Thêm Nhà Cung Cấp Mới</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="mb-3">Thông tin Nhà Cung Cấp</h4>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="TenNCC" class="control-label"></label>
                    <input asp-for="TenNCC" class="form-control" placeholder="Nhập tên nhà cung cấp" />
                    <span asp-validation-for="TenNCC" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiaChi" class="control-label"></label>
                    <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SoDienThoai" class="control-label"></label>
                    <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Tạo Mới" class="btn btn-success w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
