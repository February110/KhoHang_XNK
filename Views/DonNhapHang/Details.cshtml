@model KhoHang_XNK.Models.DonNhapHang
@{
    ViewData["Title"] = "Chi Tiết Đơn Nhập Hàng";
    decimal tongTien = 0;
    bool daThanhToan = Model.trangthaithanhtoan == 1;
}
<!--Sidebar-->
