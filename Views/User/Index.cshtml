 @using Microsoft.AspNetCore.Identity
 @using KhoHang_XNK.Models
@{
    Layout = null;
}
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<KhoHang_XNK.Models.KhoHang>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Kho Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KhoHang_XNK.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <nav id="sidebar" class="bg-primary text-white">
            <div class="sidebar-header text-center py-3">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="https://i.imgur.com/WQKgcqW.png" alt="Logo Kho Hàng" width="80" height="80">
                    <h3>Kho Hàng XNK</h3>
                </a>
            </div>
            <ul class="list-unstyled components">
                @foreach (var item in Model)
                {
                    <li class="fw-bold px-3 mt-3">📦 Kho: @item.TenKho</li>
                    <ul class="list-unstyled ps-4">
                        <li><a asp-controller="HangHoa" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>📦</span> Hàng hóa</a></li>
                        <li><a asp-controller="LoaiHangHoa" asp-action="Index" ><span>📁</span> Loại Hàng hóa</a></li>
                        <li><a asp-controller="TonKho" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>📊</span> Tồn kho</a></li>
                        <li><a asp-controller="NhanVien" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>👨‍💼</span> Nhân Viên</a></li>
                        <li><a asp-controller="KhachHang" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>🧑‍🤝‍🧑</span> Khách Hàng</a></li>
                        <li><a asp-controller="LoaiKhachHang" asp-action="Index"><span>🔖</span> Loại Khách Hàng</a></li>
                        <li><a asp-controller="NhaCungCap" asp-action="Index"><span>🏭</span> Nhà Cung Cấp</a></li>
                        <li><a asp-controller="DonNhapHang" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>📥</span> Đơn Nhập Hàng</a></li>
                        <li><a asp-controller="DonXuatHang" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>📤</span> Đơn Xuất Hàng</a></li>
                        <li><a asp-controller="PhieuKiemKe" asp-action="IndexUser" asp-route-id="@item.MaKho"><span>📜</span> Phiếu Kiểm Kê</a></li>
                    </ul>
                }

            </ul>
        </nav>

        <!-- Nội dung chính -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
                <button class="btn btn-primary" id="menu-toggle">☰</button>
                <form class="d-flex ms-auto">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm">
                    <button class="btn btn-outline-primary">🔍</button>
                </form>
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="ms-3">@UserManager.GetUserName(User) </span>
                }

            </nav>


            <div class="container-fluid mt-4" id="renderBody">
                <!-- RenderBody -->
                <div class="container-fluid p-4">
                    <h1 class="mb-4 text-center">Danh sách Kho Hàng</h1>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm Kho Hàng</a>
                        <input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm...">
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tên kho</th>
                                    <th>Địa chỉ</th>
                                    <th>Sức chứa của kho</th>
                                    <th>Ảnh kho</th>
                                    <th class="text-center">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.TenKho)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SucChua)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="KhoHang Image" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <span>Không có hình ảnh</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="KhoHang" asp-action="Edit" asp-route-id="@item.MaKho" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Sửa</a>
                                            <a asp-controller="KhoHang" asp-action="Details" asp-route-id="@item.MaKho" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Chi tiết</a>
                                            <a asp-controller="KhoHang" asp-action="Delete" asp-route-id="@item.MaKho" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa KhoHang này không?');"><i class="fas fa-trash"></i> Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
