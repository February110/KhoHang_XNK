@model IEnumerable<KhoHang_XNK.Models.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
}
<!--Sidebar-->
<div class="sidebar transition overlay-scrollbars animate__animated  animate__slideInLeft">
	<div class="sidebar-content">
		<div id="sidebar">

			<!-- Logo -->
			<div class="logo">
				<h2 class="mb-0"><img src="~/images/logo/logo_sidebar.png"> WareTrack</h2>
			</div>

			<ul class="side-menu">
				<li>
					<a asp-controller="KhoHang" asp-action="Index">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index" class="active">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiKhachHang" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">

	<div class="container-fluid dashboard">
		<div class="content-header">
			<h1>Danh Sách Hàng Hóa</h1>
			<p></p>
		</div>

		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-center mb-3">
							<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm hàng hóa mới</a>
							<input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm...">
						</div>
					</div>

					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>Mã hàng hóa</th>
										<th>Tên hàng hóa</th>
										<th>Mô tả</th>
										<th>Đơn vị tính</th>
										<th>Hạn sử dụng</th>
										<th>Hình ảnh</th>
										<th>Loại hàng hóa</th>
										<th scope="col" style="text-align: center;">Hành động</th>

									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
                                            <td>@Html.DisplayFor(modelItem => item.MaHangHoa)</td>
											<td>@Html.DisplayFor(modelItem => item.TenHangHoa)</td>
											<td>@Html.DisplayFor(modelItem => item.MoTa)</td>
											<td>@Html.DisplayFor(modelItem => item.DonViTinh)</td>
											<td>@item.HanSuDung.ToString("dd/MM/yyyy")</td>
											<td>
												<img src="@item.ImageUrl" alt="Hình ảnh hàng hóa" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
											</td>
											<td>@Html.DisplayFor(modelItem => item.LoaiHangHoa.TenLoaiHang)</td>

											<td style="text-align: center;">
												<a asp-action="Edit" asp-route-id="@item.MaHangHoa" class="btn btn-warning rounded-pill"><i class="fas fa-edit"></i> Sửa</a>
												<a asp-action="Details" asp-route-id="@item.MaHangHoa" class="btn btn-info rounded-pill"><i class="fas fa-eye"></i> Chi tiết</a>
												<a asp-action="Delete" asp-route-id="@item.MaHangHoa" class="btn btn-danger rounded-pill" onclick="return confirm('Bạn có chắc chắn muốn xóa KhoHang này không?');"><i class="fas fa-trash"></i> Xóa</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


<!-- Thêm Font Awesome cho các icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script>
    document.getElementById("searchBox").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#customerTable tr");
        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(filter) ? "" : "none";
        });
    });
</script>