@model KhoHang_XNK.Models.NhanVien

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa Nhân Viên</h1>

<h3>Bạn có chắc chắn muốn xóa nhân viên này không?</h3>
<div>
    <h4>Thông tin Nhân Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChucVu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChucVu)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KhoHang)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KhoHang.TenKho)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Ảnh Nhân Viên" width="100" height="100" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>
    </dl>

    <!-- Confirmation Form -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaNV" />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-danger btn-lg">Xóa Nhân Viên</button>
        </div>
      
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="NhanVien" asp-action="IndexUser" class="btn btn-secondary btn-sm">Quay lại danh sách</a>
        }
        else
        {
            <div class="form-group text-center">
                <a asp-controller="NhanVien" asp-action="IndexUser" class="btn btn-secondary btn-lg">Quay lại danh sách</a>
            </div>
        }
    </form>
</div>
