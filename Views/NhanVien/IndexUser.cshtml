@model IEnumerable<KhoHang_XNK.Models.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}
<h2 class="mt-4 text-primary">Danh sách nhân viên</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Thêm nhân viên mới
    </a>
</p>
<table class="table table-hover table-bordered align-middle shadow-sm">
    <thead class="table-light">
        <tr>
           
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Chức vụ</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Ảnh</th>
            <th>Kho</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.HoTen</td>
                <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                <td>@item.ChucVu</td>
                <td>@item.SoDienThoai</td>
                <td>@item.Email</td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Ảnh nhân viên" style="width: 60px; height: 60px; object-fit: cover;" class="rounded-circle border" />
                    }
                    else
                    {
                        <span class="text-muted">Không có ảnh</span>
                    }
                </td>
                <td>@item.KhoHang?.TenKho</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.MaNV" class="btn btn-sm btn-warning me-1">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaNV" class="btn btn-sm btn-info me-1">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaNV" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa nhân viên này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
