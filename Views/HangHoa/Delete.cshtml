@model KhoHang_XNK.Models.HangHoa

<div class="sidebar transition overlay-scrollbars animate__animated  animate__slideInLeft">
	<div class="sidebar-content">
		<div id="sidebar">

			<!-- Logo -->
			<div class="logo">
				<h2 class="mb-0"><img src="#"> WareTrack</h2>
			</div>

			<ul class="side-menu">
				<li>
					<a asp-controller="KhoHang" asp-action="Index">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index" class="active">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container p-4">
		<div class="content-header">
			<h1>Xóa hàng hóa</h1>
			<p></p>
		</div>
		<div class="container p-4">
			<div class="card shadow-sm p-4">
				<p class="text-center">Bạn có chắc chắn muốn xóa sản phẩm này không?</p>

				<table class="table table-bordered">
					<tbody>
						<tr>
							<th>Mã hàng hóa</th>
							<td>@Model.MaHangHoa</td>
						</tr>
						<tr>
							<th>Tên hàng hóa</th>
							<td>@Model.TenHangHoa</td>
						</tr>
						<tr>
							<th>Mô tả</th>
							<td>@Model.MoTa</td>
						</tr>
						<tr>
							<th>Đơn vị tính</th>
							<td>@Model.DonViTinh</td>
						</tr>
						<tr>
							<th>Hạn sử dụng</th>
							<td>@Model.HanSuDung.ToString("dd/MM/yyyy")</td>
						</tr>
						<tr>
							<th>Hình ảnh</th>
							<td>
								<img src="@Model.ImageUrl" alt="Hình ảnh hàng hóa" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
							</td>
						</tr>
						<tr>
							<th>Loại hàng hóa</th>
							<td>@Model.LoaiHangHoa?.TenLoaiHang</td>
						</tr>
					</tbody>
				</table>

				<form asp-action="Delete">
					<input type="hidden" asp-for="MaHangHoa" />
					<div class="text-center mt-3">
						<button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa</button>
						<a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- Thêm Font Awesome nếu cần -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
