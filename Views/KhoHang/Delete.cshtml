@model KhoHang_XNK.Models.KhoHang

@{
    ViewData["Title"] = "Xóa Kho Hàng";
}
<div class="sidebar transition overlay-scrollbars animate__animated  animate__slideInLeft">
	<div class="sidebar-content">
		<div id="sidebar">

			<!-- Logo -->
			<div class="logo">
				<h2 class="mb-0"><img src="~/images/logo/logo_sidebar.png"> WareTrack</h2>
			</div>

			<ul class="side-menu">
				<li>
					<a asp-controller="KhoHang" asp-action="Index" class="active">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<div class="content-start transition">
	<div class="content-header">
		<h1>Chi tiết kho hàng</h1>
		<p></p>
	</div>

	<h1 class="text-center">Xóa Kho Hàng</h1>
	<hr />

	<h3 class="text-center">Bạn có chắc chắn muốn xóa kho này không?</h3>

	<div>
		<h4>Thông tin Kho Hàng</h4>
		<hr />
		<dl class="row" style="color: black;">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.TenKho)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.TenKho)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DiaChi)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DiaChi)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.SucChua)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.SucChua)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ImageUrl)
			</dt>
			<dd class="col-sm-10">
				@if (!string.IsNullOrEmpty(Model.ImageUrl))
				{
					<img src="@Model.ImageUrl" alt="Kho Hàng Image" class="img-thumbnail" style="max-width: 150px;" />
				}
				else
				{
					<span>Không có hình ảnh</span>
				}
			</dd>
		</dl>

		<div class="text-center">
			<form asp-action="Delete" method="post">
				<input type="hidden" asp-for="MaKho" />
				<input type="submit" value="Xóa Kho Hàng" class="btn btn-danger btn-lg" />
			</form>
			<br />
			@if (User.IsInRole("Admin"))
			{
				<a asp-action="Index" class="btn btn-secondary btn-sm">Trở lại danh sách</a>
			}
			else
			{
				<a asp-controller="User" asp-action="Index" class="btn btn-secondary btn-sm">Trở lại danh sách</a>
			}
        
		</div>
	</div>
</div>