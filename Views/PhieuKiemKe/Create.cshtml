@model KhoHang_XNK.Models.PhieuKiemKe

@{
    ViewData["Title"] = "Tạo Phiếu Kiểm Kê";
}

<h1 class="text-primary">Tạo Phiếu Kiểm Kê</h1>
<h4>Thông Tin Phiếu Kiểm Kê</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Kho Hàng (Warehouse) -->
            <div class="form-group">
                <label asp-for="MaKho" class="control-label">Kho Hàng</label>
                <select asp-for="MaKho" class="form-control" asp-items="ViewBag.Khos">
                    <option value="">-- Chọn Kho --</option>
                </select>
                <span asp-validation-for="MaKho" class="text-danger"></span>
            </div>

            <!-- Nhân Viên (Employee) -->
            <div class="form-group">
                <label asp-for="MaNV" class="control-label">Nhân Viên</label>
                <select asp-for="MaNV" class="form-control" asp-items="ViewBag.NhanViens">
                    <option value="">-- Chọn Nhân Viên --</option>
                </select>
                <span asp-validation-for="MaNV" class="text-danger"></span>
            </div>

            <!-- Ngày Kiểm Kê (Inventory Check Date) -->
            <div class="form-group">
                <label asp-for="NgayKiemKe" class="control-label">Ngày Kiểm Kê</label>
                <input asp-for="NgayKiemKe" class="form-control" id="NgayKiemKe" type="date" />
                <span id="NgayKiemKeError" class="text-danger"></span> <!-- Thông báo lỗi tùy chỉnh -->
                <span asp-validation-for="NgayKiemKe" class="text-danger"></span> <!-- Lỗi từ model validation -->
            </div>

            <!-- Nút Submit -->
            <div class="form-group">
                <input type="submit" value="Tạo Phiếu Kiểm Kê" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            // Khi chọn Hàng Hóa, lấy tồn kho
            $('#MaHangHoa').change(function () {
                var maHangHoa = $(this).val();
                if (maHangHoa) {
                    $.get('/ChiTietPhieuKiemKe/GetSoLuongTonKho', { maHangHoa: maHangHoa }, function (data) {
                        $('#soLuongTonKho').val(data);
                        // Sau khi có tồn kho, tính chênh lệch nếu đã nhập số lượng thực tế
                        calculateChenhlech();
                    });
                } else {
                    $('#soLuongTonKho').val('');
                    $('#soLuongChenhlech').val('');
                }
            });

            // Khi thay đổi số lượng thực tế, tính chênh lệch
            $('#soLuongThucTe').on('input', function () {
                calculateChenhlech();
            });

            function calculateChenhlech() {
                var tonKho = parseInt($('#soLuongTonKho').val()) || 0;
                var thucTe = parseInt($('#soLuongThucTe').val()) || 0;
                var chenhlech = thucTe - tonKho;
                $('#soLuongChenhlech').val(chenhlech);
            }
        });
    </script>
}
