@model KhoHang_XNK.Models.DonNhapHang

@{
    ViewData["Title"] = "Tạo Đơn Nhập Hàng";
}

<!--Sidebar-->
<div class="sidebar transition overlay-scrollbars animate__animated  animate__slideInLeft">
	<div class="sidebar-content">
		<div id="sidebar">

			<!-- Logo -->
			<div class="logo">
				<h2 class="mb-0"><img src="~/images/logo/logo_sidebar.png"> WareTrack</h2>
			</div>

			<ul class="side-menu">
				<li>
					<a asp-controller="KhoHang" asp-action="Index">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiKhachHang" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index" class="active">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->
<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="row">
			<div class="col-md-6">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<!-- Ngày Nhập -->
					<div class="form-group">
						<label asp-for="NgayNhap" class="control-label">Ngày Nhập</label>
						<input asp-for="NgayNhap" class="form-control" type="date" id="NgayNhap" />
						<span id="NgayNhapError" class="text-danger"></span>
					</div>

					<!-- Nhà Cung Cấp -->
					<div class="form-group">
						<label asp-for="MaNCC" class="control-label">Nhà Cung Cấp</label>
						<select asp-for="MaNCC" class="form-control" asp-items="ViewBag.NhaCungCaps">
							<option value="">-- Chọn Nhà Cung Cấp --</option>
						</select>
						<span asp-validation-for="MaNCC" class="text-danger"></span>
					</div>

					<!-- Kho -->
					<div class="form-group">
						<label asp-for="MaKho" class="control-label">Kho</label>
						<select asp-for="MaKho" class="form-control" id="MaKho">
							<option value="">-- Chọn Kho --</option>
							@foreach (var kho in ViewBag.Khos)
							{
								<option value="@kho.Value">@kho.Text</option>
							}
						</select>
						<span asp-validation-for="MaKho" class="text-danger"></span>
					</div>

					<!-- Nhân Viên -->
					<div class="form-group">
						<label asp-for="MaNV" class="control-label">Nhân Viên</label>
						<select asp-for="MaNV" class="form-control" id="MaNV">
							<option value="">-- Chọn Nhân Viên --</option>
						</select>
						<span asp-validation-for="MaNV" class="text-danger"></span>
					</div>
					<hr />
					<!-- Submit -->
					<div class="form-group">
						<input type="submit" value="Tạo Đơn Nhập" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>

		<div>
			<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
		</div>
	</div>
</div>


<!-- JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Kiểm tra ngày nhập
        $('#NgayNhap').on('change focusout', function () {
            var ngayNhap = new Date(this.value);
            var ngayHienTai = new Date();
            ngayHienTai.setHours(0, 0, 0, 0);

            if (!this.value) {
                $('#NgayNhapError').text("Vui lòng chọn ngày nhập.");
            } else if (ngayNhap < ngayHienTai) {
                $('#NgayNhapError').text("Ngày nhập không được ngày nhỏ hơn ngày hiện tại.");
            } else {
                $('#NgayNhapError').text("");
            }
        });

        // Load danh sách nhân viên theo kho
        $('#MaKho').change(function () {
            var maKho = parseInt($(this).val()); // Chuyển giá trị thành kiểu số nguyên (int)

            if (!isNaN(maKho)) {
                $.getJSON('/DonNhapHang/GetNhanViensByKho', { maKho: maKho }, function (data) {
                    var nhanVienDropdown = $('#MaNV');
                    nhanVienDropdown.empty().append('<option value="">-- Chọn Nhân Viên --</option>');
                    $.each(data, function (index, item) {
                        nhanVienDropdown.append('<option value="' + item.maNV + '">' + item.hoTen + '</option>');
                    });
                });
            } else {
                $('#MaNV').empty().append('<option value="">-- Chọn Nhân Viên --</option>');
            }
        });
    });
</script>

