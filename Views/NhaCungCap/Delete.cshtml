@model KhoHang_XNK.Models.NhaCungCap

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid p-4">
    <h1 class="text-center mb-4">Xóa Nhà Cung Cấp</h1>

    <h3 class="text-center mb-4">Bạn có chắc chắn muốn xóa nhà cung cấp này không?</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="mb-3">Thông tin Nhà Cung Cấp</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Tên Nhà Cung Cấp:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TenNCC)</dd>

                <dt class="col-sm-4">Địa Chỉ:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-4">Số Điện Thoại:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.SoDienThoai)</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MaNCC" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
