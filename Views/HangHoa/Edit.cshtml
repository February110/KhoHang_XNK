<div class="sidebar-overlay"></div>

<div class="content-start transition">
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card shadow-lg border-0 rounded-3">
					<div class="card-body p-5">
						<div class="d-flex justify-content-between align-items-center mb-4">
							<h4 class="card-title mb-0 fw-bold text-primary">Chỉnh sửa thông tin hàng hóa</h4>
							
						</div>
						<hr class="my-4 border-secondary" />
						<form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
							<input type="hidden" asp-for="MaHangHoa" />

							<div class="form-group mb-4">
								<label asp-for="TenHangHoa" class="form-label fw-semibold text-muted">Tên hàng hóa</label>
								<input asp-for="TenHangHoa" class="form-control form-control-lg rounded-pill" placeholder="Nhập tên hàng hóa" />
								<span asp-validation-for="TenHangHoa" class="text-danger small"></span>
							</div>

							<div class="form-group mb-4">
								<label asp-for="MoTa" class="form-label fw-semibold text-muted">Mô tả</label>
								<textarea asp-for="MoTa" class="form-control form-control-lg rounded-3" rows="4" placeholder="Nhập mô tả hàng hóa"></textarea>
								<span asp-validation-for="MoTa" class="text-danger small"></span>
							</div>

							<div class="form-group mb-4">
								<label asp-for="DonViTinh" class="form-label fw-semibold text-muted">Đơn vị tính</label>
								<input asp-for="DonViTinh" class="form-control form-control-lg rounded-pill" placeholder="Nhập đơn vị tính" />
								<span asp-validation-for="DonViTinh" class="text-danger small"></span>
							</div>

							<div class="form-group mb-4">
								<label asp-for="HanSuDung" class="form-label fw-semibold text-muted">Hạn sử dụng</label>
								<input asp-for="HanSuDung" class="form-control form-control-lg rounded-pill" type="date" />
								<span asp-validation-for="HanSuDung" class="text-danger small"></span>
							</div>

							<div class="form-group mb-4">
								<label asp-for="ImageUrl" class="form-label fw-semibold text-muted">Hình ảnh</label>
								<input type="file" name="ImageUrl" class="form-control form-control-lg rounded-pill" accept="image/*" />
								<span asp-validation-for="ImageUrl" class="text-danger small"></span>
								@if (!string.IsNullOrEmpty(Model.ImageUrl))
								{
									<div class="mt-3">
										<img src="@Model.ImageUrl" alt="Hình ảnh hàng hóa" class="img-thumbnail border-0 shadow-sm rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
									</div>
								}
							</div>

							<div class="form-group mb-4">
								<label asp-for="MaLoaiHang" class="form-label fw-semibold text-muted">Loại hàng hóa</label>
								<select asp-for="MaLoaiHang" class="form-select form-select-lg rounded-pill" asp-items="ViewBag.MaLoaiHang">
									<option value="">Chọn loại hàng hóa</option>
								</select>
								<span asp-validation-for="MaLoaiHang" class="text-danger small"></span>
							</div>

							<div class="form-group text-center mt-5">
								<button type="submit" class="btn btn-success btn-lg px-5 py-2 rounded-pill shadow-sm hover-scale me-3">
									<i class="fas fa-save me-2"></i>Lưu
								</button>
								<a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill hover-scale">
									<i class="fas fa-arrow-left me-2"></i>Quay lại
								</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	.card {
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

		.card:hover {
			transform: translateY(-5px);
			box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
		}

	.btn:hover, .form-control:hover, .form-select:hover, .form-control-file:hover {
		transition: all 0.2s ease;
	}

	.hover-scale:hover {
		transform: scale(1.05);
	}

	.text-primary {
		color: #0d6efd !important;
	}

	.border-secondary {
		border-color: #dee2e6 !important;
	}

	.rounded-pill {
		border-radius: 50rem !important;
	}

	.form-control, .form-select {
		border: 1px solid #ced4da;
		background-color: #f8f9fa;
	}

		.form-control:focus, .form-select:focus {
			border-color: #0d6efd;
			box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
			background-color: #fff;
		}

	.img-thumbnail {
		transition: transform 0.3s ease;
	}

		.img-thumbnail:hover {
			transform: scale(1.1);
		}
</style>