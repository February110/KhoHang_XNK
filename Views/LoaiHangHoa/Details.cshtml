<div class="content-start transition">

	<h1>@Model.TenLoaiHang</h1>

	<div>
		<h4>Thông tin loại hàng hóa</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				Mã loại hàng
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.MaLoaiHang)
			</dd>
			<dt class="col-sm-2">
				Tên loại hàng
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.TenLoaiHang)
			</dd>
		</dl>
	</div>

	<div>
		<h4>Danh sách hàng hóa thuộc loại này</h4>
		<hr />
		@if (Model.HangHoas != null && Model.HangHoas.Any())
		{
			<table class="table">
				<thead>
					<tr>
						<th>Mã hàng hóa</th>
						<th>Tên hàng hóa</th>
						<th>Số lượng</th>
						<!-- Thêm các cột khác nếu cần -->
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.HangHoas)
					{
						<tr>
							<td>@item.MaHangHoa</td>
							<td>@item.TenHangHoa</td>
							<!-- Hiển thị các thông tin khác của hàng hóa -->
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<p>Không có hàng hóa nào thuộc loại này.</p>
		}
	</div>

	<div>
		<a asp-action="Edit" asp-route-id="@Model.MaLoaiHang">Sửa</a> |
		<a asp-action="Index">Quay lại danh sách</a>
	</div>
</div>
