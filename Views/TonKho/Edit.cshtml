		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>
<!--Content Start-->
<div class="content-start transition">

	<div class="container-fluid dashboard">

		<form asp-action="Edit" method="post">
			<div class="form-group">
				<label for="MaKho">Kho Hang</label>
				<select asp-for="MaKho" class="form-control" disabled>
					<option value="@Model.MaKho">@Model.KhoHang.TenKho</option>
				</select>
			</div>

			<div class="form-group">
				<label for="MaHangHoa">Hang Hoa</label>
				<select asp-for="MaHangHoa" class="form-control" disabled>
					<option value="@Model.MaHangHoa">@Model.HangHoa.TenHangHoa</option>
				</select>
			</div>

			<div class="form-group">
				<label for="SoLuong">So Luong</label>
				<input asp-for="SoLuong" class="form-control" type="number" min="0" />
				<span asp-validation-for="SoLuong" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary">Save Changes</button>
			<a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
