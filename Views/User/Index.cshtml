 @using Microsoft.AspNetCore.Identity
 @using KhoHang_XNK.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<KhoHang_XNK.Models.KhoHang>
<!--Sidebar-->
<div class="sidebar transition overlay-scrollbars animate__animated  animate__slideInLeft">
	<div class="sidebar-content">
		<div id="sidebar">

			<!-- Logo -->
			<div class="logo">
				<h2 class="mb-0"><img src="#"> WareTrack</h2>
			</div>

			<ul class="side-menu">
				<li>
					<a asp-controller="KhoHang" asp-action="Index">
						<i class='bx bxs-dashboard icon'></i> Kho Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="STARTER">Quản lý Hàng hóa</li>

				<li>
					<a asp-controller="HangHoa" asp-action="Index">
						<i class='bx bx-columns icon'></i>
						Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="LoaiHangHoa" asp-action="Index">
						<i class='bx bxs-meh-blank icon'></i>
						Loại Hàng Hóa
					</a>
				</li>

				<li>
					<a asp-controller="TonKho" asp-action="Index" class="active">
						<i class='fa fa-th icon'></i>
						Tồn Kho
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Atrana">Quản lý Nhân sự và Khách hàng</li>

				<li>
					<a asp-controller="NhanVien" asp-action="Index">
						<i class='bx bxs-user icon'></i>
						Nhân Viên
					</a>
				</li>

				<li>
					<a asp-controller="KhachHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Khách Hàng
					</a>
				</li>

				<li>
					<a asp-controller="LoaiKhachHang" asp-action="Index">
						<i class='bx bxs-widget icon'></i>
						Loại Khách Hàng
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="NhaCungCap" asp-action="Index">
						<i class='fa fa-pencil-ruler icon'></i>
						Nhà Cung Cấp
					</a>
				</li>

				<!-- Divider-->
				<li class="divider" data-text="Pages">Quản lý Nhà cung cấp</li>
				<li>
					<a asp-controller="DonNhapHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Nhập Hàng
					</a>
				</li>
				<li>
					<a asp-controller="DonXuatHang" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Đơn Xuất Hàng
					</a>
				</li>
				<li>
					<a asp-controller="PhieuKiemKe" asp-action="Index">
						<i class='bx bxs-notepad icon'></i>
						Phiếu Kiểm Kê
					</a>
				</li>
				<li>
					<a asp-controller="ThongKe" asp-action="Index">
						<i class="bx bxs-bar-chart-alt-2 icon"></i>
						Thông Kê Doanh Thu
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- End Sidebar-->


<div class="sidebar-overlay"></div>

<!--Content Start-->
<div class="content-start transition">
	<div class="container-fluid dashboard">
		<div class="container-fluid mt-4" id="renderBody">
			<!-- RenderBody -->
			<div class="container-fluid p-4">
				<h1 class="mb-4 text-center">Danh sách Kho Hàng</h1>

				<div class="d-flex justify-content-between align-items-center mb-3">
					<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm Kho Hàng</a>
					<input type="text" id="searchInput" class="form-control w-25" placeholder="Tìm kiếm...">
				</div>

				<div class="table-responsive">
					<table class="table table-hover table-bordered text-center align-middle">
						<thead class="table-dark">
							<tr>
								<th>Tên kho</th>
								<th>Địa chỉ</th>
								<th>Sức chứa của kho</th>
								<th>Ảnh kho</th>
								<th class="text-center">Hành động</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@Html.DisplayFor(modelItem => item.TenKho)</td>
									<td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
									<td>@Html.DisplayFor(modelItem => item.SucChua)</td>
									<td>
										@if (!string.IsNullOrEmpty(item.ImageUrl))
										{
											<img src="@item.ImageUrl" alt="KhoHang Image" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
										}
										else
										{
											<span>Không có hình ảnh</span>
										}
									</td>
									<td class="text-center">
										<a asp-controller="KhoHang" asp-action="Edit" asp-route-id="@item.MaKho" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Sửa</a>
										<a asp-controller="KhoHang" asp-action="Details" asp-route-id="@item.MaKho" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Chi tiết</a>
										<a asp-controller="KhoHang" asp-action="Delete" asp-route-id="@item.MaKho" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa KhoHang này không?');"><i class="fas fa-trash"></i> Xóa</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>

		
